<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Theme.Holo"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ff5ddb8a"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Current Wishlist:"
        android:id="@+id/wishlist_title" />

    <EditText
        android:hint="@string/prompt_username"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:clickable="true"
        android:ellipsize="middle"
        android:textIsSelectable="true"
        android:typeface="sans"
        android:focusable="true"
        android:enabled="true"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        android:padding="5dip"
        android:textSize="25dip"
        android:background="@drawable/rounded_edittext_states"
        android:accessibilityLiveRegion="polite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wishlist_tags"
        android:text="Add To Wish List"
        android:textColor="#ffffffff" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:typeface="sans"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:backgroundTint="#ff5ddb8a"
        android:background="@drawable/roundedbutton"
        android:accessibilityLiveRegion="polite"
        android:text="Update WishList"
        android:textSize="18sp"
        android:id="@+id/wishlist_updateButton" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="3sp"
        android:divider="#ff5ddb8a"
        android:id="@+id/wishlist_listview" />
</LinearLayout>